<!DOCTYPE html>
<html lang="<%=__("/ListX/UI/htmlLang") %>">

<head>
    <%- include partials/head-index.ejs%>
    <title><%=__("/ListX/UI/Index/SiteTitle") %></title>
</head>

<body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top" data-responsejs='{"create": [{"prop": "width", "prefix": "min-width- r src", "breakpoints": [0, 320, 481, 641, 961, 1025, 1281]}]}'>

<%- include partials/nav-index.ejs%>
<!-- Intro Header -->
<header class="intro">
    <div class="intro-body">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-1">
                    <h1 class="brand-heading" style="text-align: left !important;"><%- __("/ListX/UI/Index/Title1") %> </h1>
                </div>
                <div class="col-md-8 col-md-offset-2">
                    <a href="#about" class="btn btn-circle page-scroll">
                        <i class="fa fa-angle-double-down animated"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- About Section -->
<section id="about" class="container content-section text-center">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <h2 class="brand-name"><%- __("/ListX/UI/Index/aboutProjectName")%></h2>
            <p><%- __("/ListX/UI/Index/aboutProjectLongText")%></p>
            <p><%- __("/ListX/UI/Index/aboutProjectShortText")%></p>
        </div>
    </div>
</section>

<!-- Showcase Section -->
<section id="showcase" class="content-section container">
    <div class="row">
        <div class="col-lg-4 col-lg-offset-1">
            <h2><%= __("/ListX/UI/Index/about/DashboardAd")%></h2>
            <p><%= __("/ListX/UI/Index/about/DashboardAdLong")%></p>
        </div>
        <div class="col-lg-6 col-lg-offset-1">
            <video class="img-responsive" src="/static/images/listx-dashboard-ad.mp4" autoplay muted loop ></video>
        </div>
    </div>
</section>

<!-- Pricing Section -->
<section id="pricing" class="content-section container text-center">
    <div class="row col-lg-8 col-lg-offset-2">
        <h2><%= __("/ListX/UI/Index/Pricing") %></h2>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="well">
                <h3><b><%= __("/ListX/UI/Index/BetaTesters") %></b></h3>
                <hr>
                <p><%= __("/ListX/UI/UnlimitedLists") %></p>
                <hr>
                <p><%= __("/ListX/UI/Index/EarlyAccess") %></p>
                <hr>
                <p><%= __("/ListX/UI/Index/LessLimitedSupport") %></p>
                <hr>
                <p><b><%= __("/ListX/UI/Index/Free") %></b></p>
                <hr>
                <a href="/signup?b=✓" class="btn btn-default btn-block"><%= __("/ListX/UI/Index/signUp") %></a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="well">
                <h3><b><%= __("/ListX/UI/Index/Free") %></b></h3>
                <hr>
                <p><%= __n("/ListX/UI/Lists", 5) %></p>
                <hr>
                <p><%= __("/ListX/UI/Currency", "0", "50") %> <%= __("/ListX/UI/Index/AdditionalLists") %></p>
                <hr>
                <p><%= __("/ListX/UI/Index/LimitedSupport") %></p>
                <hr>
                <p><b><%= __("/ListX/UI/Index/Free") %></b></p>
                <hr>
                <a href="/signup" class="btn btn-default btn-block"><%= __("/ListX/UI/Index/signUp") %></a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="well">
                <h3><b><%= __("/ListX/UI/Index/Premium") %></b></h3>
                <hr>
                <p><%= __("/ListX/UI/UnlimitedLists") %></p>
                <hr>
                <p><%= __("/ListX/UI/Index/EarlyAccess") %></p>
                <hr>
                <p><%= __("/ListX/UI/Index/FullSupport") %></p>
                <hr>
                <p><b><%= __("/ListX/UI/Currency", "1", "00") %><%= __("/ListX/UI/Index/PerMonthShort") %></b></p>
                <hr>
                <a href="/signup?p=✓" class="btn btn-danger btn-block"><%= __("/ListX/UI/Index/signUp") %></a>
            </div>
        </div>
    </div>
</section>

<%- include partials/footer-index.ejs%>

<!-- jQuery -->
<script src="/static/vendor/jquery/jquery.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="/static/vendor/bootstrap/js/bootstrap.min.js"></script>

<!-- Plugin JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

<!-- Theme JavaScript -->
<script src="/static/javascripts/index.js"></script>

</body>

</html>