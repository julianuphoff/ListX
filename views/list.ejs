<!doctype html>

<html ng-app="ShoppingList">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <meta name="theme-color" content="#ff4c4c">


    <title><%=list.name%> | <%= __("/ListX/UI/SiteName")%></title>

    <link href="/static/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/static/stylesheets/list.css" rel="stylesheet">

    <!-- jQuery -->
    <script src="/static/vendor/jquery/jquery.js"></script>
    <!-- AngularJS -->
    <script src="/static/vendor/angular/angular-1.0.8.js"></script>
    <!-- Angular App -->
    <script>const listId = "<%=list._id%>"</script>
    <script src="/static/javascripts/listsController.js"></script>
</head>
<body ng-controller="mainController">
<div class="container">

    <div class="jumbotron text-center">
        <h1><%=list.name.substr(0,40)%></h1>
        <h2><%= __("/ListX/UI/List/Elements")%>: <span class="label label-danger">{{ items.length }}</span></h2>
    </div>

    <div id="todo-list" class="row">
        <div class="col-sm-4 col-sm-offset-4">
            <div class="checkbox ng-scope" ng-repeat="item in items">
                <label>
                    <input type="checkbox" ng-click="deleteTodo(item._id)"> <h3 style="margin-top: 0"> {{ item.name }} </h3>
                    <ul><li ng-show="item.amount"><h4><%= __("/ListX/UI/List/Amount")%>: {{ item.amount }}</h4></li><li ng-show="item.art"><h4><%= __("/ListX/UI/List/Art") %>: {{ item.art }}</h4></li></ul>
                </label>
            </div>
        </div>
    </div>

    <div id="todo-form" class="row">
        <div class="col-sm-8 col-sm-offset-2 text-center">
            <form>
                <div class="form-group">
                    <input type="text" class="form-control input-lg" placeholder="<%= __("/ListX/UI/List/NameSetter")%>" ng-model="formData.name">
                    <input type="text" class="form-control input-lg" placeholder="<%= __("/ListX/UI/List/AmountSetter")%>" ng-model="formData.amount">
                    <input type="text" class="form-control input-lg" placeholder="<%= __("/ListX/UI/List/ArtSetter")%>" ng-model="formData.art" />
                    <label class="fileContainer" style="background: #ff4c4c;">
                        Take image
                        <input type="file" accept="image/*" capture="camera" id="img-input" ng-model="formData.image"/>
                    </label>
                    <div id="img-result"></div>
                </div>

                <button type="submit" id="insert-button" class="btn btn-danger btn-lg" ng-click="createTodo()"><%= __("/ListX/UI/List/AddElement")%></button>
            </form>
        </div>
    </div>

    <div class="container">
        <a href="/dashboard"><%= __("/ListX/UI/Index/dashboard") %></a> <a href="/list/<%=list._id%>/settings"><%= __("/ListX/UI/Index/settings") %></a>
    </div>


</div>
<script src="//cdnjs.cloudflare.com/ajax/libs/annyang/2.6.0/annyang.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/SpeechKITT/0.3.0/speechkitt.min.js"></script>
<script>

</script>
</body>
</html>
